@{
    ViewBag.Title = "Home Page";
}



<div class="row" style="padding-top:30px;">
    <div>Ejemplo con DataTables</div>
    <form id="form-name">
        <div class="col-md-3 col-lg-3">
            <input id="txt-name" class="form-control" placeholder="Introduzca un nombre" />
        </div>
        <div class="col-md-3 col-lg-3">
            <input id="txt-lastname" class="form-control" placeholder="Introduzca un apellido" />
        </div>
        <div class="col-md-3 col-lg-3">
            <button class="btn btn-default" id="btn-add-table">Agregar</button>
        </div>
        <div class="col-md-3 col-lg-3">
            <button class="btn btn-success" type="submit" id="btn-send-form">Enviar</button>
        </div>
    </form>
</div>
<div class="row" style="padding-top:20px;">
    <div class="col-md-4 col-lg-4">
        <table id="table-names" class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Apellido</th>
                    <th>Delete Button</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/app/home/index.js" type="text/javascript"></script>
}